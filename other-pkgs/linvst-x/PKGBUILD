pkgname=linvst-x
pkgver=4.9
pkgrel=1
license=('GPL3')
pkgdesc="Windows VST2 wrapper that allows them to be used as Linux VST2s in compatible DAWs using Wine."
arch=('x86_64')
url="https://github.com/osxmidi/LinVst-X"
depends=('wine')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/osxmidi/LinVst-X/archive/refs/tags/${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
    cd "${srcdir}/LinVst-X-${pkgver}"
    make DESTDIR="${pkgdir}" all
}

package() {
    cd "${srcdir}/LinVst-X-${pkgver}"
    make DESTDIR="${pkgdir}" VST_DIR="${pkgdir}/usr/lib/vst/"  install
}
